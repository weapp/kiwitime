- if flash[:notice]
  .alert.alert-info
    %button.close{"data-dismiss" => "alert", :type => "button"} &times;
    %strong Notice!
    = flash[:notice]
- if flash[:error]
  .alert.alert-error
    %button.close{"data-dismiss" => "alert", :type => "button"} &times;
    %strong Error!
    = flash[:error]
- if flash[:alert]
  .alert.alert-error
    %button.close{"data-dismiss" => "alert", :type => "button"} &times;
    %strong Alert!
    = flash[:alert]