- @fullpage = true
.hero-unit
  .row
    .span5{style:"margin-left:80px"}
      %h1
        Welcome to Kiwitime!
        %br
        %small Manage your time, manage your life.
        %br
        %br
      %center
        %a.btn.btn-inverse.btn-large{href:user_omniauth_authorize_path(:google_oauth2)}
          = image_tag "google_32.png"
          &nbsp; Sign up/in With Google &raquo;
    .span4.offset1.form-signin
      = simple_form_for(:user, :as => :user, :url => session_path(:user), :method => :post) do |f|
        .form-inputs
          = f.input :email, :required => false, :autofocus => true
          = f.input :password, :required => false
          %label.checkbox
            = f.input :remember_me, :as => :boolean, label: false
            Yes, remember me
        %br
        = f.button :submit, "Sign in", class: "btn btn-inverse btn-large"
        or 
        = link_to "Sign up", new_user_registration_path, class: "btn btn-large"

